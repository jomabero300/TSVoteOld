@model TSVoteWeb.Data.Entities.Gene.CommuneTownship

@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong> Éxito ! - </strong>  @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped table-responsive-md table-bordered smfont"  id="CategoriesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.CategoryTypeDers.FirstOrDefault().CategoryType.Name)*@
                Descripción
            </th>
            <th>
                <a asp-action="CategoryTypeDerAdd" asp-route-categoryid="@Model.Id" class="btn btn-sm btn-primary"><i class="bi bi-plus-circle-fill"></i> Nuevo</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.NeighborhoodSidewalks.Count>0)
        {
            @foreach (var item in Model.NeighborhoodSidewalks)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="CategoryTypeDerDelete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="bi bi-trash-fill"></i> Borrar</a>

                    @*@Html.ActionLink("Borrar", "CategoryTypeDerDelete",new { CategoryId=item.Id, CategoryTypeId=item.CategoryType.Id },new { @class = "btn btn-sm btn-danger bi bi-trash-fill" })*@
                </td>
            </tr>
            }
        }
    </tbody>
</table>