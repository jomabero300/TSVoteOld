@model TSVoteWeb.Data.Entities.Gene.CommuneTownship

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="offse-12">
        <div class="card border">

            <div class="card-header">
                <h3></h3>Crear Comuna / corregimiento</h3>
            </div>

            <div class="card-body">

                <form asp-action="Create">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group">
                        <label asp-for="CityId" class="control-label"></label>
                        <select asp-for="CityId" asp-items="ViewBag.CityId" class="form-control"></select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ZoneId" class="control-label"></label>
                        <select asp-for="ZoneId" asp-items="ViewBag.ZoneId" class="form-control"></select>
                        <span asp-validation-for="ZoneId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <button class="btn btn-primary" type="submit"><i class="bi bi-save2-fill"></i> Guardar</button>
                        <a asp-action="Index" class="btn btn-success"><i class="bi bi-arrow-left-circle-fill"></i> Regresar al listado</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
